<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.ProjectManager.Material3" parent="Theme.Material3.DayNight">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryContainer">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/surface</item>
        <item name="colorOnPrimaryContainer">@color/surface</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryContainer">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/surface</item>
        <item name="colorOnSecondaryContainer">@color/surface</item>
        
        <!-- Surface colors -->
        <item name="android:windowBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/background</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/surface</item>
        <item name="colorErrorContainer">@color/error</item>
        <item name="colorOnErrorContainer">@color/surface</item>
        
        <!-- Additional Material3 colors -->
        <item name="colorPrimaryInverse">@color/surface</item>
        <item name="colorOutline">@color/text_hint</item>
        
        <!-- System bars -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>
</resources> 