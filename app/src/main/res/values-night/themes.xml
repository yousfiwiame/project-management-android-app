<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.ProjectManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/text_primary_dark</item>

        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/secondary_light</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/text_primary_dark</item>

        <!-- Surface colors -->
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        <item name="colorError">@color/error_light</item>
        <item name="colorOnError">@color/text_primary_dark</item>

        <!-- System bars -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>
        <item name="android:textColorHint">@color/text_hint_dark</item>

        <!-- Component styles -->
        <item name="materialButtonStyle">@style/Widget.ProjectManager.Button</item>
        <item name="textInputStyle">@style/Widget.ProjectManager.TextInputLayout</item>
        <item name="materialCardViewStyle">@style/Widget.ProjectManager.CardView.Dark</item>
    </style>

    <!-- Card style for dark theme -->
    <style name="Widget.ProjectManager.CardView.Dark" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="rippleColor">?attr/colorSecondary</item>
        <item name="cardCornerRadius">12dp</item>
    </style>
</resources>